
page{
    background-color: #FCFCFC;
}

button::after {
    border: none !important;
    padding: 0 !important;
    margin: 0 !important;
  }
  
  button {
    background-color: transparent !important;
    padding: 0 !important;
    line-height: inherit !important;
    margin: 0 !important;
    width: auto !important;
    font-weight: 500 !important;
    border-radius: none !important;
    font-size: 24rpx !important;
  }

/* 顶部轮播 */
.topSwi{
    width: 93%;
    height: 400rpx;
    margin: 20rpx auto;
    border-radius: 20rpx;
    overflow: hidden;
}

.topSwi>.swiper{
    width: 100%;
    height: 100%;
}

.swiperImage{
    width: 100%;
    height: 100%;
}



/* 详情标题 */
.dateTitle{
    width: 90%;
    height: 185rpx;
    background-color: white;
    border-radius: 20rpx;
    margin: 20rpx auto;
    padding: 30rpx 0 0 30rpx;
    box-shadow: 0px 10px 20px rgba(209, 209, 209, 0.16);
}

.dateTitle>.title-box{
    width: 100%;
    height: 50rpx;
    font-size: 22rpx;
    color: #6A6A6A;
    display: flex;
    justify-content: start;
    align-items: center;
}

.dateTitle>.title-box>image{
    width: 20rpx;
    height: 20rpx;
    margin-right: 20rpx;
}


/* 活动详情 */
.actDeta{
    width: 90%;
    background-color: white;
    border-radius: 20rpx;
    margin: 20rpx auto;
    box-shadow: 0px 10px 20px rgba(209, 209, 209, 0.16);
}

.actDeta>.act-title{
    width: 90%;
    height: 100rpx;
    padding: 0 30rpx;
    display: flex;
    justify-content: start;
    align-items: center;
    color: #030303;
    font-size: 28rpx;
    font-weight: bold;
}

.actDeta>.act-title>.t-xian{
    width: 0;
    height: 25rpx;
    border: 4rpx solid #EFC243;
    margin-right: 20rpx;
    margin-bottom: -4rpx;
}

.actDeta>.act-body{
    width: 90%;
    padding: 30rpx;
    overflow: hidden;
}


/* 底部 */
.bottom-box{
    width: 100%;
    height: 110rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    background-color: white;
    display: flex;
    justify-content: space-between;
    align-items: center;
}


.bottom-box>.box1{
    width: 60%;
    height: 100%;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.bottom-box>.box1>.fx{
    width: 120rpx;
    height: 100%;
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
    font-size: 20rpx;
    font-weight: bold;
    color: #2F3033;
}

.bottom-box>.box1>.fx>image{
    width: 37rpx;
    height: 37rpx;
    margin-bottom: 5rpx;
}

.bottom-box>.box1>.time{
    width: 340rpx;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    font-size: 20rpx;
    font-weight: bold;
    color: #2F3033;
}

.bottom-box>.box2{
    width: 40%;
    height: 100%;
    background: linear-gradient(180deg, #EFC243 0%, #F6CE5F 100%);
    font-size: 24rpx;
    font-weight: bold;
    color: white;
    text-align: center;
    line-height: 110rpx;
}




.di{
    height: 200rpx;
    width: 100%;
}