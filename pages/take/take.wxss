/* pages/take/take.wxss */
page{
  background-color: #ffffff;
}
.take{
  width: 100%;
  height: 665rpx;
  background-color: white;
}
.take>.head{
  width: 85%;
  margin: auto;
}
.take>.head>.head-top{
  width: 80%;
  font-size: 29rpx;
  font-weight: 500;
}
.take>.head>.head-center{
  width: 80%;
}
.take>.head>.head-center>image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
}
.take>.body{
  width: 85%;
  margin: 30rpx auto;
  font-size: 64rpx;
  border-bottom: 1rpx solid #707070;
}
.take>.body>.inp{
  width: 80%;
  height: 100%;
}

.take>.foot{
  width: 85%;
  margin: 30rpx auto;
}
.take>.foot>.foot-top{
  font-size: 29rpx;
}
.take>.foot>.foot-center{
  width: 100%;
  margin: 50rpx auto;
}
.take>.foot>.foot-center>button{
  width: 100%;
  height: 90rpx;
  border-radius: 50rpx;
  background: linear-gradient(180deg, #F0C651 0%, #EFC142 61%, #ECC65B 62%, #EFBD34 100%);
  color: white;
  line-height: 60rpx;
}


.takeBody{
  width: 90%;
  margin: auto;
  padding-bottom: 60rpx;
}
.takeBody>.title{
  width: 100%;
  font-size: 32rpx;
  font-weight: bold;
  color: #4B4B4B;
}
.takeBody>.body{
  width: 100%;
  font-size: 26rpx;
  line-height: 50rpx;
  color: #848484;
}
