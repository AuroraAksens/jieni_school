/* pages/become/become.wxss */

/* head */
.head{
  width: 100%;
  height: 45rpx;
  background-color: rgb(255, 225, 182);
  color: #ffa01b;
  font-size: 20rpx;
}
.head>image{
  width: 30rpx;
  height: 30rpx;
}

/* body */
.body{
  width: 100%;
  height: 650rpx;
}
.body>.text{
  width: 90%;
}
.body>.text>.title1{
  font-size: 48rpx;
  font-weight: 550;
}
.body>.text>.title2{
  font-size: 26rpx;
  font-weight: 600;
}
.body>.text>.title3{
  font-size: 22rpx;
  color:#888888;
}
.body>.text>.title3>image{
  width: 20rpx;
  height: 20rpx;
}
.body>.img{
  width: 700rpx;
  height: 240rpx;
  position: relative;
}

.body>.img>.text{
  width: 70%;
  position: absolute;
  top: 80rpx;
  left: 210rpx;
}
.body>.img>image{
  width: 100%;
  height: 100%;
}

.beIDcard{
  position: absolute;
  top: 40rpx;
  left: 40rpx;
}


/* foot */
.foot{
  width: 100%;
  height: 100rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 22rpx;
  color: #888888;
  position: absolute;
  bottom: 0;
}